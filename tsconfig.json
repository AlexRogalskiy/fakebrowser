{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "stripInternal": true,
    "types": ["node"],
    "skipLibCheck": false,
    "declarationMap": true,
    "pretty": true,
    "declaration": true,
    "strict": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/test"
  ]
}
