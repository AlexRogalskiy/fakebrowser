{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2019",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": false,
    "declarationMap": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "lib",
    "node_modules",
    "src/test"
  ]
}
